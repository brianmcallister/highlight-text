{
  "name": "@brianmcallister/highlight-text",
  "version": "1.2.0",
  "description": "Hightlight words in text.",
  "repository": "https://github.com/brianmcallister/highlight-text",
  "main": "src/node/index.js",
  "browser": "src/browser/index.js",
  "scripts": {
    "build_old": "npm run clean && babel ./src --out-dir=./dist",
    "build": "tsc --emitDeclarationOnly --outdir dist",
    "clean": "rimraf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "babel --watch=./src --out-dir=./dist",
    "flow": "flow",
    "lint": "eslint --ignore-path .gitignore --ext .jsx --ext .js src",
    "prepublish": "npm run build",
    "test:ci": "scripts/test-ci.sh",
    "test:watch": "npm t -- -w --reporter min",
    "test": "nyc --reporter=html --reporter=text mocha",
    "types": "flow-typed install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "7.7.0",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-typescript": "7.7.0",
    "@types/jest": "24.0.22",
    "babel-cli": "6.26.1",
    "babel-core": "6.26.3",
    "babel-eslint": "8.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-istanbul": "4.1.5",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "chai": "4.0.1",
    "coveralls": "3.0.0",
    "eslint": "4.1.1",
    "eslint-config-airbnb": "15.0.2",
    "eslint-plugin-flowtype": "2.34.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.0.1",
    "flow-bin": "0.49.1",
    "flow-typed": "2.1.2",
    "jest": "24.9.0",
    "jsdom": "11.5.1",
    "mocha": "3.4.1",
    "nyc": "11.0.3",
    "proxyquire": "1.8.0",
    "sinon": "2.3.6",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  }
}
