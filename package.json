{
  "name": "@brianmcallister/highlight-text",
  "version": "1.2.0",
  "description": "Hightlight words in text.",
  "repository": "https://github.com/brianmcallister/highlight-text",
  "main": "src/node/index.js",
  "browser": "src/browser/index.js",
  "scripts": {
    "build": "npm run clean && babel ./src --out-dir=./dist",
    "clean": "rimraf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "babel --watch=./src --out-dir=./dist",
    "flow": "flow",
    "lint": "eslint --ignore-path .gitignore --ext .jsx --ext .js src",
    "prepublish": "npm run build",
    "test:ci": "scripts/test-ci.sh",
    "test:watch": "npm t -- -w --reporter min",
    "test": "nyc --reporter=html --reporter=text mocha",
    "types": "flow-typed install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.1.1",
    "babel-plugin-istanbul": "4.1.4",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.16.0",
    "chai": "4.0.1",
    "coveralls": "2.13.1",
    "eslint": "4.1.1",
    "eslint-config-airbnb": "15.0.2",
    "eslint-plugin-flowtype": "2.29.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.0.1",
    "flow-bin": "0.49.1",
    "flow-typed": "2.0.0",
    "jsdom": "11.1.0",
    "nyc": "11.0.3",
    "mocha": "3.4.1",
    "proxyquire": "1.8.0",
    "sinon": "2.3.6"
  }
}
