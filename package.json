{
  "name": "@brianmcallister/highlight-text",
  "version": "1.2.0",
  "description": "Hightlight words in text.",
  "repository": "https://github.com/brianmcallister/highlight-text",
  "main": "src/node/index.js",
  "browser": "src/browser/index.js",
  "scripts": {
    "build": "npm run clean && babel ./src --out-dir=./dist",
    "clean": "rimraf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "babel --watch=./src --out-dir=./dist",
    "flow": "flow",
    "lint": "eslint --ignore-path .gitignore --ext .jsx --ext .js src",
    "prepublish": "npm run build",
    "test:ci": "scripts/test-ci.sh",
    "test:watch": "npm t -- -w --reporter min",
    "test": "nyc --reporter=html --reporter=text mocha",
    "types": "flow-typed install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-istanbul": "3.0.0",
    "babel-plugin-transform-flow-strip-types": "6.21.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "eslint": "3.12.1",
    "eslint-config-airbnb": "13.0.0",
    "eslint-plugin-flowtype": "2.29.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.8.0",
    "flow-bin": "0.37.4",
    "flow-typed": "2.0.0",
    "jsdom": "9.9.1",
    "mocha": "3.2.0",
    "nyc": "10.1.2",
    "proxyquire": "1.7.10",
    "sinon": "1.17.6"
  }
}
