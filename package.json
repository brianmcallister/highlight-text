{
  "name": "@brianmcallister/highlight-text",
  "version": "1.2.0",
  "description": "Hightlight words in text.",
  "repository": "https://github.com/brianmcallister/highlight-text",
  "main": "src/node/index.js",
  "browser": "src/browser/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:types && webpack && rimraf dist/*/__tests__",
    "build:types": "tsc --emitDeclarationOnly --outdir dist",
    "clean": "rimraf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "babel --watch=./src --out-dir=./dist",
    "flow": "flow",
    "lint": "eslint --ignore-path .gitignore --ext .jsx --ext .js src",
    "prepublish": "npm run build",
    "test:ci": "scripts/test-ci.sh",
    "test:watch": "npm t -- -w --reporter min",
    "test": "nyc --reporter=html --reporter=text mocha",
    "types": "flow-typed install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "7.7.0",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-typescript": "7.7.0",
    "@types/jest": "24.0.22",
    "@types/node": "12.12.6",
    "babel-loader": "8.0.6",
    "jest": "24.9.0",
    "proxyquire": "1.8.0",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  }
}
